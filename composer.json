{
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "38.0.0",
		"mediawiki/mediawiki-phan-config": "^0.11.1",
		"mediawiki/minus-x": "^1.1",
		"seld/jsonlint": "^1.7"
	},
	"scripts": {
		"lint": [
			"phpcs -p -s",
			"minus-x check ."
		],
		"test": [
			"phpcs -p -s",
			"minus-x check .",
			"phpunit",
			"npm test"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"extra": {
		"phan-taint-check-plugin": "4.0.0"
	}
}
